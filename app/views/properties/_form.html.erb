<%= form_for @property, :html => { :multipart => true } do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= f.label :photo %><br />
      <%= f.file_field :photo %>
  </div>

  <div class="field">
    <%= f.label :number_of_rooms %><br />
    <%= f.select(:number_of_rooms, Property::ROOMS) %>
  </div>
  <div class="field">
    <%= f.label :number_of_bedrooms %><br />
    <%= f.select(:number_of_bedrooms, Property::BEDROOMS) %>
  </div>
  <div class="field">
    <%= f.label :number_of_bathrooms %><br />
    <%= f.select(:number_of_bathrooms, Property::BATHROOMS) %>
  </div>
  <div class="field">
    <%= f.label :parking_allotment %><br />
    <%= f.select(:parking_allotment, Property::PARKING) %>
  </div>
  <div class="field">
    <%= f.label :internet_included %><br />
    <%= f.check_box :internet_included %>
  </div>
  <div class="field">
    <%= f.label :street_address %><br />
    <%= f.text_field :street_address %>
  </div>
  <div class="field">
    <%= f.label :property_type %><br />
    <%= f.select(:property_type, Property::PROPERTY) %>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br />
    <%= f.number_field :owner_id %>
  </div>
  <div class="field">
    <%= f.label :manager_id %><br />
    <%= collection_select(:property, :manager_id, User.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :price_per_period %><br />
    <%= f.text_field :price_per_period %>
  </div>
  <div class="field">
    <%= f.label :period_type %><br />
    <%= f.select(:period_type, Property::PERIOD) %>
  </div>
  <div class="field">
    <%= f.label :purpose %><br />
    <%= f.select(:purpose, Property::PURPOSE) %>
  </div>
  <div class="field">
    <%= f.label :owner_name %><br />
    <%= f.text_field :owner_name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
